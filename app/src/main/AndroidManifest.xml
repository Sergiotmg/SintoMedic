<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.sintomedic">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        tools:ignore="GoogleAppIndexingWarning"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        >

        <!-- LOGIN ACTIVITY -->
        <activity
            android:name=".view.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!-- MAIN ACTIVITies -->

        <activity
            android:name=".view.MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.MainPacienteActivity"
            android:label="@string/title_activity_main_paciente" />

        <activity
            android:name=".view.MainDoctorActivity"
            android:label="@string/title_activity_main_doctor" />

        <!-- registro pacientes -->
        <activity
            android:name=".view.RegisterPacienteActivity"
            android:label="Registro Paciente"
            android:parentActivityName=".view.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sintomedic.view.LoginActivity" />
        </activity>

        <!-- actividad registro doctores -->
        <activity
            android:name=".view.RegisterDoctorActivity"
            android:label="Registro Doctor"
            android:parentActivityName=".view.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sintomedic.view.LoginActivity" />
        </activity>

        <activity
            android:name=".view.ShowFichaPacienteActivity"
            android:label="Ficha paciente"
            android:parentActivityName=".view.MainDoctorActivity"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sintomedic.view.MainPacienteActivity" />
        </activity>

        <activity
            android:name=".view.ShowSintomasPacienteActivity"
            android:label="Síntomas">
        </activity>

        <activity
            android:name=".view.ShowSintomaPacienteActivity"
            android:label="Síntoma">
        </activity>

        <activity
            android:name=".view.AddSintomaPacienteActivity"
            android:label="Registrar síntoma">
        </activity>

        <activity
            android:name=".view.ShowEnfermedadesPacienteActivity"
            android:label="Enfermedades">
        </activity>

        <activity
            android:name=".view.ShowEnfermedadPacienteActivity"
            android:label="Enfermedad">
        </activity>

        <activity
            android:name=".view.AddEnfermedadPacienteActivity"
            android:label="Registrar enfermedad">
        </activity>

    </application>

</manifest>